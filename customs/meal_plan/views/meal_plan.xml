<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="meal_plan_view_form" model="ir.ui.view">
        <field name="name">meal.plan.view.form</field>
        <field name="model">fewa.meal.plan</field>
        <field name="arch" type="xml">
            <form string="Meal Plan">
                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Fasting"/>
                        </h1>
                    </div>

                    <group>
                        <field name="type" />
                                        <field name="available_orders" />

                        <field name="price" />

                    </group>
                    <notebook>
                        <page name="meals" string="Meals">
                            <field name="meal_ids">
                                <kanban>
                                    <field name="name"/>
                                    <field name="image"/>

                                    <templates>

                                        <t t-name="kanban-box">
                                            <div class="oe_kanban_global_click o_company_card">
                                                <div class="d-flex align-items-start gap-3 p-2">
                                                    <div class="flex-shrink-0" style="width: 80px; height: 80px;">
                                                        <t t-if="record.image.raw_value">
                                                            <img t-att-src="kanban_image('fewa.meal.plan', 'image', record.id.raw_value)" alt="Plan Image" class="w-100 h-100 object-fit-contain border rounded"/>
                                                        </t>
                                                        <t t-else="">
                                                            <div class="w-100 h-100 bg-light border rounded d-flex align-items-center justify-content-center">
                                                                <i class="fa fa-meal fa-2x text-secondary"/>
                                                            </div>
                                                        </t>
                                                    </div>

                                                    <div class="flex-grow-1 min-w-0">
                                                        <div class="mb-2">
                                                            <strong class="fs-5 text-dark d-block">
                                                                <t t-esc="record.name.value"/>
                                                            </strong>
                                                        </div>


                                                    </div>
                                                    <div class="flex-shrink-0">
                                                        <button type="object" name="unlink" class="btn btn-sm btn-danger">
                                                            <i class="fa fa-trash"/>
                                                        </button>
                                                    </div>
                                                </div>

                                            </div>
                                        </t>
                                    </templates>
                                </kanban>
                                <form>
                                    <sheet>
                                        <group>
                                            <field name="image" widget="image" nolabel="true" class="oe_avatar"/>
                                            <div class="oe_title">
                                                <label for="name"/>
                                                <h1>
                                                    <field name="name" placeholder="e.g. Tegabino"/>
                                                </h1>
                                            </div>

                                        </group>

                                    </sheet>

                                </form>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="meal_plan_view_list" model="ir.ui.view">
        <field name="name">meal.plan.view.list</field>
        <field name="model">fewa.meal.plan</field>
        <field name="arch" type="xml">
            <list string="Meals">
                <field name="image" widget="image" class="w-25" />
                <field name="name" />
                <field name="price" />
            </list>
        </field>
    </record>

    <record id="meal_plan_view_kanban" model="ir.ui.view">
        <field name="name">fewa.meal.plan.view.kanban</field>
        <field name="model">fewa.meal.plan</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="name"/>
                <field name="image"/>
                <field name="price"/>
                <field name="available_orders" />
                <field name="meal_ids"/>
                <field name="type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_company_card">
                            <div class="d-flex align-items-start gap-3 p-2">

                                <!-- Image -->
                                <div class="flex-shrink-0" style="width: 80px; height: 80px;">
                                    <t t-if="record.image.raw_value">
                                        <img t-att-src="kanban_image('fewa.meal.plan', 'image', record.id.raw_value)" alt="Plan Image" class="w-100 h-100 object-fit-contain border rounded"/>
                                    </t>
                                    <t t-else="">
                                        <div class="w-100 h-100 bg-light border rounded d-flex align-items-center justify-content-center">
                                            <i class="fa fa-utensils fa-2x text-secondary"/>
                                        </div>
                                    </t>
                                </div>

                                <!-- Details -->
                                <div class="flex-grow-1 min-w-0">
                                    <!-- Name -->
                                    <div class="mb-1">
                                        <strong class="fs-5 text-dark d-block">
                                            <t t-esc="record.name.value"/>
                                        </strong>
                                    </div>

                                    <!-- Type -->
                                    <div class="mb-1 text-muted">
                                        <t t-esc="record.type.value"/>
                                    </div>

                                    <!-- Price -->
                                    <t t-if="record.price.raw_value">
                                        <div class="mb-1 text-muted d-flex align-items-center">
                                            <i class="fa fa-money me-1"/>
                                            <t t-esc="record.price.value"/>
                                        </div>
                                    </t>

                                    <!-- Meals Count -->
                                    <t t-if="record.meal_ids.raw_value">
                                        <div class="mb-1 text-muted d-flex align-items-center">
                                            <i class="fa fa-list me-1"/>
                                            <t t-esc="record.meal_ids.raw_value ? record.meal_ids.raw_value.length : 0"/> meals
                                        </div>

                                    </t>
                                    <t t-if="record.available_orders.raw_value">
                                        <div class="mb-1 text-muted d-flex align-items-center">
                                            <i class="fa fa-list me-1"/>
                                            <t t-esc="record.available_orders.raw_value "/> Orders
                                        </div>

                                    </t>
                                </div>

                                <!-- Delete Button -->
                                <div class="flex-shrink-0 d-flex align-items-start">
                                    <button type="object" name="unlink" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fa fa-trash"/>
                                    </button>
                                </div>

                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>




    <record id="fewa_meal_plan_action" model="ir.actions.act_window">
        <field name="name">Meal Plan</field>
        <field name="res_model">fewa.meal.plan</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="oe_nocontent_smile">No Meal Plan</p>
        </field>
    </record>
</odoo>
