<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="fewa_meals_view_form" model="ir.ui.view">
        <field name="name">fewa.meals.view.form</field>
        <field name="model">fewa.meals</field>
        <field name="arch" type="xml">
            <form string="Meals">


                <sheet>
                    <field name="image" widget="image" class="oe_avatar"/>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="e.g. Tegabino"/>
                        </h1>
                    </div>


                    <group>
                        <field name="meal_plan" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="fewa_meals_view_kanban" model="ir.ui.view">
        <field name="name">fewa.meals.view.kanban</field>
        <field name="model">fewa.meals</field>
        <field name="arch" type="xml">
            <kanban>
                <field name="image" />
                <field name="name" />
                <field name="meal_plan" />
                <templates>

                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click o_company_card">
                            <div class="d-flex align-items-start gap-3 p-2">
                                <div class="flex-shrink-0" style="width: 80px; height: 80px;">
                                    <t t-if="record.image.raw_value">
                                        <img t-att-src="kanban_image('fewa.meals', 'image', record.id.raw_value)" alt="Plan Image" class="w-100 h-100 object-fit-contain border rounded"/>
                                    </t>
                                    <t t-else="">
                                        <div class="w-100 h-100 bg-light border rounded d-flex align-items-center justify-content-center">
                                            <i class="fa fa-meal fa-2x text-secondary"/>
                                        </div>
                                    </t>
                                </div>

                                <div class="flex-grow-1 min-w-0">
                                    <div class="mb-2">
                                        <strong class="fs-5 text-dark d-block">
                                            <t t-esc="record.name.value"/>
                                        </strong>
                                    </div>

                                    <div class="mb-2">
                                        <strong class="fs-5 text-light d-block">
                                            <t t-esc="record.meal_plan.name"/>
                                        </strong>
                                    </div>
                                 

                                </div>
                                  <div class="flex-shrink-0 d-flex align-items-start">
                                    <button type="object" name="unlink" class="btn btn-sm btn-danger" title="Delete">
                                        <i class="fa fa-trash"/>
                                    </button>
                                </div>
                            </div>

                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>


    <record id="fewa_meals_action" model="ir.actions.act_window">
        <field name="name">Meals</field>
        <field name="res_model">fewa.meals</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
        <field name="help" type="html">
            <p class="o_nocontent_smile">No Meal </p>
        </field>
    </record>
</odoo>
